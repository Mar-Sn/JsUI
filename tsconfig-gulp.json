{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "module": "umd",
    "rootDir": "./src/",
    "sourceRoot": "./src/",
    "target": "es5",
    "sourceMap": true,
    "inlineSources": false
  },
  "exclude": [
    "node_modules",
    "test",
    "unit",
    "target",
    "dist"
  ]
}